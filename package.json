{
  "private": true,
  "workspaces": [
    "packages/vuepress",
    "packages/@vuepress/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "lerna run clean --stream",
    "copy": "lerna run copy --stream",
    "copy-watch": "lerna run copy --parallel -- --watch",
    "dev": "yarn copy-watch & yarn build --watch",
    "docs:build": "vuepress build docs",
    "docs:clean": "rimraf docs/.vuepress/.temp docs/.vuepress/.cache docs/.vuepress/dist",
    "docs:dev": "vuepress dev docs",
    "docs:serve": "serve docs/.vuepress/dist",
    "postinstall": "yarn copy && yarn build",
    "lint": "eslint --ext .js,.ts,.vue .",
    "release": "yarn lint && yarn clean && yarn copy && yarn build && yarn test && lerna publish",
    "test": "jest --runInBand"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{json,yml,css}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "prettier-config-vuepress",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.15",
    "cpx": "^1.5.0",
    "eslint": "^7.12.1",
    "eslint-config-vuepress": "^3.0.1",
    "eslint-config-vuepress-typescript": "^2.0.3",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "jest-serializer-vue": "^2.0.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "prettier-config-vuepress": "^1.1.1",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "sort-package-json": "^1.46.1",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5"
  }
}
